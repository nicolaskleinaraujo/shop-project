generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  email    String    @unique
  number   Int?      @unique
  city     String
  street   String
  houseNum Int
  requests Request[]
}

model Request {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  slug     String  @unique
  author   User    @relation(fields: [authorId], references: [id])
  authorId String  @db.ObjectId
  items    String
  details  String?
}
